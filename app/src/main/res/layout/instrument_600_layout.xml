<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_instrument"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            >

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@color/colorPrimaryDark"
            android:paddingLeft="24dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="名称"
                android:textColor="@color/text_icons"
                android:textSize="@dimen/Eplv_title_textsize"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="备注"
                android:textColor="@color/text_icons"
                android:textSize="@dimen/Eplv_title_textsize"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时间"
                android:textColor="@color/text_icons"
                android:textSize="@dimen/Eplv_title_textsize"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="结果"
                android:textColor="@color/text_icons"
                android:textSize="@dimen/Eplv_title_textsize"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="颜色"
                android:textColor="@color/text_icons"
                android:textSize="@dimen/Eplv_title_textsize"/>

        </LinearLayout>

        <ExpandableListView
            android:id="@+id/epl_instrument"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0.5dp"
            >
            <!--android:groupIndicator="@null"-->
        </ExpandableListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <Button
            android:id="@+id/bt_test_black"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="黑"
            android:textSize="@dimen/bt_textSize"
          />

        <Button
            android:id="@+id/bt_test_white"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="白"
            android:textSize="@dimen/bt_textSize"
            />

        <Button
            android:id="@+id/bt_save_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textSize="@dimen/bt_textSize"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bt_test_standard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="标样选择"
            android:textSize="@dimen/bt_textSize"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bt_test_instrument"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="试样"
            android:textSize="@dimen/bt_textSize"/>

    </LinearLayout>

</LinearLayout>