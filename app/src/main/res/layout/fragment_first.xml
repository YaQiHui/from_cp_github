<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".mvp.V.fragments.FirstFragment">

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:translationZ="3dp"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:padding="5dp"
                android:id="@+id/spinner_left1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"></Spinner>

            <Spinner
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:id="@+id/spinner_right1"
                android:layout_height="wrap_content"
                android:layout_span="2"></Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:id="@+id/spinner_left"
                android:layout_height="wrap_content"
                android:layout_span="2"></Spinner>

            <Spinner
                android:padding="5dp"
                android:layout_weight="1"
                android:id="@+id/spinner_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"></Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_sp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X:" />

            <Button
                android:id="@+id/tip_ref"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="请输入参数"
                android:visibility="gone"/>

            <EditText android:id="@+id/et1_sp1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv5_sp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R:" />

            <TextView
                android:id="@+id/tv1_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="100" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv2_sp1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X:" />


            <Button
                android:layout_height="wrap_content"
                android:text="请输入参数"
                android:layout_width="wrap_content"
                android:visibility="gone"/>

            <EditText android:id="@+id/et2_sp1"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />



            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv6_sp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="R:" />

            <TextView
                android:id="@+id/tv2_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="100" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv3_sp1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X:" />

            <Button
                android:layout_height="wrap_content"
                android:text="请输入参数"
                android:layout_width="wrap_content"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/et3_sp1"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv7_sp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="R:" />

            <TextView
                android:id="@+id/tv3_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="100" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv4_sp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X:" />

            <EditText
                android:id="@+id/et4_sp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv8_sp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="R:" />

            <TextView
                android:id="@+id/tv4_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="100" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            style="@style/myBaseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="颜色空间值转换"
            android:translationZ="2dp" />

        <TextView
            android:id="@+id/tv_fragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:text="照明：D50  观察：2°" />

        <Button
            android:id="@+id/colorpicker_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色显示区域"
            android:textColor="@color/text_icons"
            android:translationZ="2dp" />

        <Button
            android:id="@+id/bt_register"
            style="@style/myBaseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colorpicker_first"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="注册获取更多高级功能"
            android:translationZ="2dp" />
    </LinearLayout>


</LinearLayout>
